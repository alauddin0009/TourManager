    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/eventNameInEventHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Title"
                android:textColor="#102286"
                android:layout_marginTop="5dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="editEventInEventHome"
                android:text="Edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:padding="0dp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=":"
                android:id="@+id/textView15" />

            <TextView
                android:id="@+id/eventPlaceInEventHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placename"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="0dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="From "
                android:textAllCaps="false"
                android:textSize="18sp"
                android:id="@+id/textView10"
                android:padding="0dp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=":"
                android:id="@+id/textView17" />

            <TextView
                android:id="@+id/eventStartInEventHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-12-2000"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="0dp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="To"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:padding="0dp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=":"
                android:id="@+id/textView19" />

            <TextView
                android:id="@+id/eventEndInEventHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-12-2000"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="0dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="Budget "
                android:textAllCaps="false"
                android:textSize="18sp"
                android:padding="0dp"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:id="@+id/BudgetColoring"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=":"
                android:id="@+id/textView20" />

            <TextView
                android:id="@+id/eventBudgetInEventHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 $"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="0dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Moments"
            android:textColor="#102286"
            android:layout_marginTop="5dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Event not started yet"
               android:id="@+id/emptyMoments"
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:textSize="24sp"
               android:textColor="#c7c7c7"
               android:visibility="gone"

               />
            <ListView
                android:id="@+id/momentList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </RelativeLayout>


    </LinearLayout>





</LinearLayout>


